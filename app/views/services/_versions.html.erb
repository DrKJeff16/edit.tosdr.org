<div class="article-holder status-changes">
  <table class="table">
    <thead class="thead thead-dark">
      <th scope="col">TYPE</th>
      <th scope="col">CHANGES</th>
      <th scope="col">DATE</th>
      <th scope="col">USER</th>
    </thead>
    <tbody>
      <% @versions.each do |v| %>
      <tr>
        <th scope="row"><%= v.event %></th>
        <td>
          <% if v.changeset["analysis"] %>
          Analysis change: <%= v.changeset["analysis"] %>
          <% elsif v.changeset["status"] %>
          Status change: <%= v.changeset["status"] %>
          <% else %>
          No changes recorded
          <% end %>
        </td>
        <td><%= v.created_at %></td>
        <td><%= username v.whodunnit %> <%= rank_badge User.find_by_id(v.whodunnit) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

